{{#each  ideas}}

<div class='card card-body mb-2'>
    <h5>{{title}}</h5>
    <p>{{details}}</p>
    <a href='/ideas/edit/{{id}}' class='btn btn-dark mb-2' >Edit</a>
    <form action="/ideas/delete/{{id}}?_method=DELETE" method="post">
    <input type='hidden' name='_method' value='DELETE'/>
    <input type='submit' class='btn btn-danger btn-block' value='Delete'/>
    </form>
</div>

{{else}}
<p>No video ideas</p>
{{/each}}
